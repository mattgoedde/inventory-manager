@inherits LayoutComponentBase

<PageTitle>Inventory Manager</PageTitle>

<FluentLayout Style="margin-top: 10px;">
    <FluentHeader>
        Inventory Manager
        <FluentSpacer />
        <!-- Login and MoreMenu Here -->
    </FluentHeader>
    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
            <FluentNavMenu Width="150">
                <FluentNavMenuLink Class="level1" Icon="@FluentIcons.Home" Text="Home" Href=""/>
            </FluentNavMenu>
            <FluentBodyContent>
                <ErrorBoundary>
                    <ChildContent>
                        @Body
                    </ChildContent>
                    <ErrorContent Context="ex">
                            <p class="error">@ex.Message</p>
                    </ErrorContent>
                </ErrorBoundary>
            </FluentBodyContent>
    </FluentStack>
    <FluentFooter Style="@("height: 40px; color: white; text-align: center;")">
        Inventory Manager ©@(DateTime.Today.Year)
    </FluentFooter>
</FluentLayout>
